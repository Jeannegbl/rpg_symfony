{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block header %}
    <input type="button" class="input-bouton" value="Voir les types" onclick="window.location.href='{{path('Type')}}';">
    <h1 class="font">Générateur de Personnage RPG</h1>
    <input type="button" class="input-bouton" value="Ajouter Personnage" onclick="window.location.href='{{path('AddPersonnage')}}';">
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="liste">
    {% for personnage in personnages %}
    <div class="selection-personnage">
        <h2>{{personnage.nom}}</h2>
        <input type="button" class="input-bouton input-body" value="Plus d'info" onclick="window.location.href='character/{{personnage.id}}';">
    </div>
    {% endfor %}
</div>
{% endblock %}