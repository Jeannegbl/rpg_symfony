{% extends 'base.html.twig' %}

{% block title %}Type{% endblock %}


{% block header %}
        <input type="button" class="input-bouton" value="Retour au menu" onclick="window.location.href='{{path('Home')}}';">
        <h1 class="font">Liste de tout les types</h1>
        <input type="button" class="input-bouton input-ajouter" value="Ajouter Type" onclick="window.location.href='{{path('AddType')}}';">
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="liste">
    {% for type in types %}
        <div class="selection">
            <h2>{{type.nom}}</h2>
            <div>
                <input type="button" class="input-bouton input-modifier" value="Modifier" onclick="window.location.href='/type/edit/{{type.id}}';">
                <input type="button" class="input-bouton input-effacer" value="Effacer" onclick="window.location.href='/type/delete/{{type.id}}';">
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}