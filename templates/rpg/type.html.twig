{% extends 'base.html.twig' %}

{% block title %}Type{% endblock %}

{% block javascripts %}
    <script src="AvataaarsJS-main/avataaars.js"></script>
{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div>
    <input type="button" value="Retour au menu" onclick="window.location.href='{{path('Home')}}';">
    <input type="button" value="Ajouter" onclick="window.location.href='{{path('AddType')}}';">
    {% for type in types %}
        <h2>{{type.nom}}</h2>
        <input type="button" value="Modifier" onclick="window.location.href='/type/edit/{{type.id}}';">
        <input type="button" value="Effacer" onclick="window.location.href='/type/delete/{{type.id}}';">
    {% endfor %}
</div>
{% endblock %}